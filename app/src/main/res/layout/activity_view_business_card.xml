<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical">

    <include layout="@layout/color_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical"
            android:paddingTop="15sp"
            android:paddingBottom="15sp">

            <ImageView
                android:id="@+id/imgQrCode"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/qr_code" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/textBlackToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_my_id"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/txtUserId"
                    style="@style/textBlackToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="@color/red" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="20sp">


                    <TextView
                        style="@style/textLigtBlue15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_full_name" />

                    <TextView
                        android:id="@+id/edtFullName"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:inputType="textMultiLine" />

                    <TextView
                        style="@style/textLigtBlue15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/signup_email" />

                    <TextView
                        android:id="@+id/edtEmail"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <TextView
                        style="@style/textLigtBlue15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/login_mobile_number" />

                    <TextView
                        android:id="@+id/edtMobile"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <TextView
                        style="@style/textLigtBlue15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/addcard_business_name" />

                    <TextView
                        android:id="@+id/edtBusinessName"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:inputType="textMultiLine" />

                    <TextView
                        style="@style/textLigtBlue15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/addcard_business_services" />

                    <TextView
                        android:id="@+id/edtBusinessservice"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <TextView
                        style="@style/textLigtBlue15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/addcard_social_media" />


                    <TextView
                        android:id="@+id/edtFacebook"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableRight="@drawable/ic_fb"
                        android:drawablePadding="5dp" />

                    <TextView
                        android:id="@+id/edtLinkedin"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableRight="@drawable/ic_in"
                        android:drawablePadding="5dp" />

                    <TextView
                        android:id="@+id/edtGmail"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableRight="@drawable/ic_google"
                        android:drawablePadding="5dp" />

                    <TextView
                        android:id="@+id/edtTwitter"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableRight="@drawable/ic_twitter"
                        android:drawablePadding="5dp" />

                    <TextView
                        android:id="@+id/edtInstagram"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableRight="@drawable/ic_insta"
                        android:drawablePadding="5dp" />


                    <TextView
                        style="@style/textLigtBlue15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/addcard_website_link" />


                    <TextView
                        android:id="@+id/edtWebsite"
                        style="@style/edtBlack15Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableRight="@drawable/ic_domai"
                        android:drawablePadding="5dp" />

                    <Button
                        android:id="@+id/btnSaveCard"
                        style="@style/btnBlueBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/btn_save_business_card"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>