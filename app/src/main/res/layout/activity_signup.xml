<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/layToolbar"
        layout="@layout/custom_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingTop="25dp"
                    android:paddingEnd="15dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="7dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:orientation="vertical"
                            android:paddingStart="15dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="20sp">

                            <TextView
                                style="@style/textLigtBlue15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/signup_full_name" />

                            <EditText
                                android:id="@+id/edtFullName"
                                style="@style/edtBlack15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="@string/edt_enter_full_name"
                                android:imeOptions="actionNext"
                                android:inputType="text" />

                            <TextView
                                style="@style/textLigtBlue15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/signup_email" />

                            <EditText
                                android:id="@+id/edtEmail"
                                style="@style/edtBlack15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="@string/edt_enter_email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress" />


                            <TextView
                                style="@style/textLigtBlue15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/login_mobile_number" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_background"
                                android:orientation="horizontal">

                                <com.rilixtech.CountryCodePicker
                                    android:id="@+id/ccp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="5dp"
                                    app:ccp_textColor="@color/black"
                                    app:ccp_textSize="15sp" />

                                <EditText
                                    android:id="@+id/edtMobile"
                                    style="@style/edtBlack15Regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:hint="@string/edt_enter_mobile_number"
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal" />

                            </LinearLayout>

                            <TextView
                                style="@style/textLigtBlue15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/signup_referral_code" />

                            <LinearLayout
                                android:background="@drawable/edittext_background"
                                android:layout_marginTop="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edtReferralCode"
                                    style="@style/edtBlack15Regular"
                                    android:layout_width="0sp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/edt_enter_referral_Code"
                                    android:imeOptions="actionNext"
                                    android:inputType="text" />

                                <ImageView
                                    android:id="@+id/imgScan"
                                    android:padding="8dp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_color_qrcode"/>

                            </LinearLayout>

                            <TextView
                                style="@style/textLigtBlue15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/login_password" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/edittext_background"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edtPassword"
                                    style="@style/edtBlack15Regular"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:hint="@string/edt_password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword" />

                                <ImageView
                                    android:id="@+id/togglePassShow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/show" />

                                <ImageView
                                    android:id="@+id/togglePassHide"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:padding="5dp"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/hide"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <TextView
                                style="@style/textLigtBlue15Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/signup_confirm_password" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/edittext_background"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edtConfiPassword"
                                    style="@style/edtBlack15Regular"
                                    android:layout_width="0sp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:hint="@string/edt_enter_confirm_password"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPassword" />

                                <ImageView
                                    android:id="@+id/toggleConfiPassShow"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/show" />

                                <ImageView
                                    android:id="@+id/toggleConfiPassHide"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:padding="5dp"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/hide"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"/>

                            <Button
                                android:id="@+id/btnSignUp"
                                style="@style/btnBlueBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="@string/title_sign_up" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_defualt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textBlack16Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_alredy_have_account" />

                <TextView
                    android:id="@+id/txtSignIn"
                    style="@style/textBlue16Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:text="@string/login_signin" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>