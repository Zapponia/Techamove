<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical">

    <include layout="@layout/color_toolbar" />

    <RelativeLayout
        android:id="@+id/rlmain"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/pageBackground">


        <LinearLayout
            android:id="@+id/llConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/txtConnect"
            style="@style/textBlack16Regular"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/share_connect_network" />

            <TextView
                android:id="@+id/txtAddMember"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                style="@style/btnBlueBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_member"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnShare"
            android:layout_below="@id/llConnect"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/btnShare"
            style="@style/btnBlueBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:text="@string/lable_share" />

    </RelativeLayout>


    <include layout="@layout/error_view"></include>
</LinearLayout>